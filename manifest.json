{
  "manifest_version": 3,
  "name": "GMGN & DexScreener Analyzer",
  "version": "1.0",
  "description": "Protecting the chives is a duty we cannot shirk.",
  "permissions": [
    "activeTab",
    "scripting",
    "sidePanel",
    "tabs",
    "storage"
  ],
  "action": {
    "default_icon": "icon.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "side_panel": {
    "default_path": "sidepanel.html"
  },
  "host_permissions": [
    "https://*.gmgn.ai/*",
    "https://*.dexscreener.com/*",
    "<all_urls>"
  ],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content-script.js"],
      "run_at": "document_start"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["inject.js"],
      "matches": ["<all_urls>"]
    }
  ],
  "icons": {
    "48": "icon.png",
    "128": "icon.png"
  }
}